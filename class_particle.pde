class Spot {
          float x, y;
          color c;
          float r;
  
//------------------------------------------------------------------------------------------------------------------  
Spot() {
          x = random(width);
          y = random(height);
          c = somecolor();
          r = random(1,5);
}

//------------------------------------------------------------------------------------------------------------------
void move() {
          x += random(-10,10); 
          y += 5;
}
  
